<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_mouse" tools:context="com.lightthefuture.minor_ii.Mouse"
    android:background="#212b33">

    <View
        android:id="@+id/Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Der"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#ab504e4e" />

    <Button
        android:id="@+id/Der"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Izq"
        android:layout_alignBottom="@+id/Izq"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:text=" Right Click "
        android:onClick="clickRight"
        android:background="#cdccd7"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/Izq"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Area"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:text="Left Click"
        android:onClick="clickLeft"
        android:background="#cdccd7"
        android:textStyle="bold"
        android:typeface="monospace"/>

</RelativeLayout>
