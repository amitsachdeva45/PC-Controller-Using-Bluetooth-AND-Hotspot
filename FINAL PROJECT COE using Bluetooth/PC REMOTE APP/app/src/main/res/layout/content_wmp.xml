<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_wmp"
    tools:context="com.lightthefuture.minor_ii.WMP"
    android:background="#212b33">

    <Button
        android:id="@+id/Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/file_stop_wmp"
        android:onClick="pressStop"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="380dp"/>

    <Button
        android:id="@+id/Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/file_play_wmp"
        android:onClick="pressPlay"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="380dp"/>

    <Button
        android:id="@+id/Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pressPause"
        android:background="@drawable/file_pause_wmp"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="380dp"/>

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pressNext"
        android:background="@drawable/file_next_wmp"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="380dp"/>

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pressBack"
        android:background="@drawable/file_back_wmp"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="380dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="450dp"
        android:textColor="#0d71ff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Stop"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="450dp"
        android:textColor="#0d71ff" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="450dp"
        android:textColor="#0d71ff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Pause"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="450dp"
        android:textColor="#0d71ff" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Play"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="450dp"
        android:textColor="#0d71ff" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/listView44"
        android:entries="@array/list1"
        android:background="#996a80a1"
        android:divider="#fdfefe"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:dividerHeight="3dp" />"
        android:dividerHeight="3dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/playmusic"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="266dp"
        android:background="#cdccd7"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText44"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:hint="Enter number to play Music "/>

</RelativeLayout>
